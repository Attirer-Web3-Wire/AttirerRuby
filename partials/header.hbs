<header class='new-header'>

    <div class='top-header'>


        <div class="top-left">
            {{> logo }}
        </div>

        <div class="top-right">
            {{#if @site.members_enabled}}
            {{#if @member}}
            <a class="button-styled-left" href=' #/portal/account' class='c-header__button'>{{t 'Account' }}</a>
            {{else}}
            <a class="button-styled-left" href='#/portal/signin' class='c-header__button u-visible-on-desktop'>{{t
                'Sign
                In' }}</a>
            {{#unless @site.members_invite_only}}
            <a class="button-styled-right" href='#/portal/signup' class='c-btn c-btn--small'>{{t 'Subscribe' }}</a>
            {{/unless}}
            {{/if}}
            {{/if}}
        </div>

    </div>


    <div class='bottom-header'>
        {{navigation}}
    </div>

</header>