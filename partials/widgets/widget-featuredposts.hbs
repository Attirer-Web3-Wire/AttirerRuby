<div class="widget widget-recent">
    <h4 class="widget-title">Featured</h4>
    {{#get 'posts' filter='featured:true' limit=@custom.featured_posts_count as |featured|}}
    {{#foreach featured visibility='all'}}
        <div style="width:100%;height:150px;margin-top:15px;">
          <a
            class='featured-card__media m-b-sm'
            href='{{url}}'
            title='{{title}}'
            aria-label='{{title}}'
          >
            <img style="border-radius:10px;" class="lazyload u-object-fit" data-src="{{img_url feature_image size="m" format="webp"}}"
        src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-sizes="auto"
        alt="{{title}}">
          </a>
       
</div>
   <article class="recent" style="margin-top:10px;">
            <h5 class="widget-eh">
                <a class="post-title-link" href="{{url}}">{{title}}</a>
            </h5>
            {{> post-date}}
        </article>

  {{/foreach}}
{{/get}}
</div>