{
    "name": "attirer-dark-theme-2",
    "description": "theme for attirer web3 wire based on dark ruby",
    "version": "1.1.0",
    "engines": {
        "ghost": ">=3.0.0",
        "ghost-api": "v3"
    },
    "license": "MIT",
    "author": {
        "name": "Ghost Foundation",
        "email": "hello@ghost.org",
        "url": "https://ghost.org"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "config": {
        "card_assets": {
            "exclude": [
                "button",
                "blockquote",
                "bookmark",
                "header",
                "image",
                "gallery"
            ]
        },
        "custom": {
            "featured_posts_count":{
                "type":"text",
                "default":"5",
                "group": "homepage"
            },
            "number_of_editors_picks_posts": {
                "type": "text",
                "default": "5",
                "group": "homepage"
            },
            "dark_mode_accent_color": {
                "type": "color",
                "default": "#F0A45C"
            },
            "enable_dark_mode": {
                "type": "boolean",
                "default": true
            },
            "dark_mode_publication_logo": {
                "type": "image"
            }
        },
        "posts_per_page": 21,
        "image_sizes": {
            "card-image":{
                "width":320
            },
            "xxs":{
                "width":30
            },
            "xs": {
                "width": 150
            },
            "s": {
                "width": 400
            },
            "m": {
                "width": 750
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1140
            },
            "xxl": {
                "width": 1920
            }
        }
    },
    "scripts": {
        "dev": "gulp",
        "test": "gscan .",
        "lint": "gulp lint",
        "zip": "gulp zip"
    },
    "devDependencies": {
        "autoprefixer": "9.8.6",
        "beeper": "2.0.0",
        "cssnano": "4.1.10",
        "gulp": "4.0.2",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "8.0.0",
        "gulp-stylelint": "^13.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.0.2",
        "postcss-color-mod-function": "^3.0.3",
        "postcss-easy-import": "3.0.0",
        "pump": "3.0.0",
        "stylelint": "^13.7.1",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-order": "^4.1.0"
    }
}